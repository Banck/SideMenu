# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Generates documentation for given version."
  lane :doc do |options| 
    Actions.sh('cd .. && xcodebuild docbuild -scheme SideMenu -destination generic/platform=iOS OTHER_DOCC_FLAGS="--transform-for-static-hosting --hosting-base-path SideMenu --output-path docs docs"')
  end

  desc "Runs all the tests"
  lane :test do

    scan(
      scheme: "SideMenu", 
      devices: ['iPhone XÊ€']
      )
  end
end
